<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--gqf-->
    <!--义卖顶部rad按钮style-->

    <style name="sale_top_rad">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_redio_black_blue</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@mipmap/ic_dropdown_arrow</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">?android:listChoiceBackgroundIndicator</item>
    </style>
    <!--gqf-->
    <!--主界面底部四个rad按钮style-->

    <style name="main_bottom_rad_function">
        <item name="android:textSize">@dimen/medium_txt_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">@color/color_redio_main_bottom</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>

    </style>
   <!-- 春   学校信息网格布局列表-->

    <style name="schoolinfo_top_grid_rb">
        <item name="android:textSize">@dimen/minimum_txt_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/two_height_item</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- 春   学校信息常用的链接-->
    <style name="schoolinfo_bottom_common_connect_tv">
        <item name="android:textSize">@dimen/small_txt_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--柳 界面中权值为1的纵向布局-->
    <style name="vertical_weight_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--柳 界面中权值为1的横向布局-->
    <style name="horizontal_weight_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--柳 工具页面几个按钮图片和文字的布局方式-->
    <style name="toolspage_btn_picandtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_txt_size</item>
        <item name="android:drawablePadding">@dimen/one_margin_item</item>
    </style>
    <!--jyq-->
    <!--义卖顶部rad按钮style-->

    <style name="signinList_top_rad">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_redio_black_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
    </style>
    <!--jyq-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
