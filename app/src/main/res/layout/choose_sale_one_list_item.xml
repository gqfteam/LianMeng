<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/sale_chose_item_one_lin"
              android:layout_width="match_parent"
              android:layout_height="@dimen/four_height_item"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal" >

    <ImageView
        android:id="@+id/chose_item_img"
        android:layout_width="@dimen/four_height_item"
        android:layout_height="match_parent"

        />

    <TextView
        android:id="@+id/chose_item_msg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/one_margin_item"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:text="全部分类"
        android:paddingLeft="@dimen/two_margin_item"
        android:textSize="@dimen/minimum_txt_size"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/chose_item_ishave_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_deal_arrow_right" />

</LinearLayout>
