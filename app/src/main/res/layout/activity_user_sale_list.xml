<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/whitesmoke"
        >
        <Button
            android:id="@+id/User_salelist_top_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/travel__poi_weak_deal_back"
            android:paddingRight="@dimen/four_margin_item"
            android:background="#00000000"
            />
        <TextView
            android:id="@+id/User_salelist_top_title_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:text="我的商品"
            android:gravity="center_vertical"
            android:textSize="@dimen/super_txt_size"
            />
        <Button
            android:id="@+id/User_salelist_top_add_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="新品上架"
            android:textColor="@color/blueColor"
            android:background="#00000000"/>
        <Button
            android:id="@+id/User_salelist_top_delete_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="#00000000"/>
    </LinearLayout>

</LinearLayout>
