<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@android:color/white">
    
    <LinearLayout 
        android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:layout_gravity="center"
           android:layout_marginLeft="25dp"
           android:gravity="center"
            android:text="所在地区"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            
             />

        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/ac4"
            android:layout_marginRight="10dp"
            android:paddingTop="13dp"
            />
        </LinearLayout>
    
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F1F3"/>
    
    <RadioGroup 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/popu_RadioGroup"
        >
        
        <RadioButton 
            android:id="@+id/radio_province"
            android:text="请选择"
            android:textColor="#f00"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           
            />
        
        <RadioButton 
            android:id="@+id/radio_city"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:clickable="false"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           />
        
        <RadioButton 
            android:id="@+id/radio_district"
           android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:clickable="false"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/radio_compus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:clickable="false"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <View 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <View 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        
    </RadioGroup>
    <RelativeLayout 
                android:layout_height="5dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                >
           <TextView 
	           android:id="@+id/top_view_rollline"
	           android:layout_width="40dp"
	           android:layout_height="2dp"
	           android:background="@mipmap/bjc"/>
            </RelativeLayout>
       
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/ac9"/>
    
    <ListView 
        android:id="@+id/popup_list"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >
        
    </ListView>
    

</LinearLayout>
