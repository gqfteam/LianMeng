<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
        android:id="@+id/friends_list_item_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/four_margin_item"
        android:background="@color/gainsboro"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:textColor="@color/dimgrey"
        android:textSize="@dimen/medium_txt_size"
        android:text="A"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/four_height_item"
        android:layout_marginBottom="@dimen/two_margin_item"
        android:layout_marginTop="@dimen/two_margin_item"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/friends_list_item_img"
            android:layout_width="@dimen/four_height_item"
            android:layout_height="match_parent"
            android:background="@color/blueColor"
            />
        <TextView
            android:id="@+id/friends_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="gqf"
            android:textSize="@dimen/super_txt_size"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/five_height_item"
        />

</LinearLayout>
