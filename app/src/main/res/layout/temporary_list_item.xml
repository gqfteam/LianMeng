<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/max_height_item"
              android:orientation="vertical">
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/oneanntwo_height_item"
                  android:layout_margin="@dimen/activity_horizontal_margin"
                  android:background="@color/green_background"
                  android:orientation="horizontal"
                  android:paddingLeft="@dimen/activity_horizontal_margin">
    <!--left-->
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            style="@style/temporary_ListItem_textview"
            android:text="发起人：李思思"/>
        <TextView
            android:id="@+id/time"
            style="@style/temporary_ListItem_textview"
            android:text="时间：08：:00"/>
        <TextView
            android:id="@+id/place"
            style="@style/temporary_ListItem_textview"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:text="地点：河南科技大学西苑校区足球场"/>
    </LinearLayout>
    <!-- right-->
    <!--按钮和时间-->
    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible">
        <Button
            android:id="@+id/signin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/two_margin_item"
            android:background="@color/orange_bt"
            android:text="签到"
        android:textSize="@dimen/super_txt_size"
        android:textColor="@color/white"/>

        <TextView
            android:id="@+id/returnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/returntv_marginBottom"
            android:layout_marginRight="@dimen/returntv_marginRight"
            android:text="剩余：00:08:30"
            android:textSize="@dimen/medium_txt_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/returnTime"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/returntv_marginBottom"
            android:layout_marginRight="@dimen/returntv_marginRight"
            android:text="目的：开会"
            android:textSize="@dimen/medium_txt_size"/>
    </RelativeLayout>
    <!--图片-->
    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:layout_centerVertical="true"
                   android:paddingBottom="@dimen/activity_horizontal_margin"
                   android:paddingLeft="@dimen/four_height_item"
                   android:paddingTop="@dimen/activity_horizontal_margin"
                   android:src="@mipmap/signinlist_success"/>
    </RelativeLayout>

</LinearLayout>
    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@mipmap/line"
               android:layout_marginLeft="@dimen/activity_horizontal_margin"
               android:layout_marginRight="@dimen/activity_horizontal_margin"/>
</LinearLayout>