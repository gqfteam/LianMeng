<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--标题-->
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/three_margin_item"
        >

        <ImageView
            android:id="@+id/setting_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            />
        <TextView
            android:id="@+id/setting_me_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/big_txt_size"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/setting_back_img"/>
        <TextView
            android:id="@+id/setting_set_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/big_txt_size"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_fregment_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>