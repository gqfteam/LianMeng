<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--标题-->
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/three_margin_item"
        >

        <TextView
            android:id="@+id/setting_me_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/back"
            android:text="我"
            android:gravity="center"
            android:textColor="@color/blueColor"
            android:textSize="@dimen/big_txt_size"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/setting_set_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/blueColor"
            android:textSize="@dimen/big_txt_size"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_fregment_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/setting_listItem_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:text="退出登录"
        android:textColor="@color/red"
        android:padding="@dimen/two_margin_item"
        android:layout_marginTop="@dimen/six_margin_item"
        android:textSize="@dimen/big_txt_size"
        />

</LinearLayout>